<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mywebsite</title>
    <style>
        * {
            border: 0;
            margin: 0;
            padding: 0;
         
        }
        
        .container {
            width: 980px;
            margin: 0 auto;
        }

        .top {
            width: 100%;
            height: 182px;
        }

        body {
        }
        .nav ul li {
            padding-right: 30px;
            list-style: none;
            float: left;
        }
            .nav ul li a {
                color: white;
                text-decoration: none;
            }
                .nav ul li a:hover {
                    color: #324571;
                }
    </style>
</head>
<body>
        <div class="top">
            <div style="width:997px;margin:0 auto;">
                <div style="position:absolute; width:100%; left:0;background-color: rgba(173, 193, 240, 0.35);height:135px; ">
                </div>
                <div style="position:absolute;top:135px; width:100%; left:0;background-color: rgba(99, 137, 225, 1);height:47px; ">
                </div>
                <div style=" position:absolute; top:45px;font-size:26px; ">
                    John Qin Blog
                </div>
                <div style=" position:absolute; top:82px;font-size:22px;color:gray;">
                    a fresh engineer that wants to be full-stack engineer.
                </div>
                <div style="position:absolute;top:135px;height:47px;line-height:47px;" class="nav">
                    <ul>
                        <li>
                            <a href="/">Home</a>
                        </li>
                        <li>
                            <a href="/about">About</a>
                        </li>
                        <li>
                            <a href="/contact">Contact</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div style="width:997px;margin:0 auto; padding:10px 0; min-height:800px;">
            @RenderBody()
        </div>
        
        <div class="bottom" style="width:100%; height:56px;border-top:1px solid #A0A09F;">
            <div style="width:997px;margin:0 auto;line-height:56px; color: #A0A09F;">
                <span>
                    © 2017 by John Qin
                </span>
            </div>

        </div>
    @RenderSection("Scripts", required: false)
