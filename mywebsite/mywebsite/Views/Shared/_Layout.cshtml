<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - mywebsite</title>
    <style>
        * { border: 0; margin: 0; padding: 0; }
        .top { width: 100%; height: 182px; background-color: rgba(173, 193, 240, 0.35); }
        html, body, .wrap { height: 100%; }
        .nav ul li { padding-right: 30px; list-style: none; float: left; }
            .nav ul li a { color: white; text-decoration: none; }
                .nav ul li a:hover { color: #324571; }
        .nav { width: 100%; height: 47px; line-height: 47px; background-color: rgba(99, 137, 225, 1); }
        .wrap { height: auto; min-height: 100%; }
        .main { padding: 10px 10px 67px 10px; }
        .bottom { width: 100%; height: 56px; border-top: 1px solid #A0A09F; margin-top: -57px; }
        .content { width: 997px; margin: 0 auto; }
        .bottom .content { line-height: 56px; color: #A0A09F; }
        .main { width: 997px; margin: 0 auto; min-height: 100%; }
    </style>

</head>
<body>
    <div class="wrap">
        <div class="top">
            <div class="content" style="height:95px;padding-top:40px;">
                <h1>John Qin Blog</h1>
                <h2 style=" color:gray;">12312312321   @*a fresh engineer that wants to be full-stack engineer.*@</h2>
            </div>
            <div class="nav">
                <div class="content">
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="About">About</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Contact">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="main">
            @RenderBody()
        </div>
    </div>


    <div class="bottom">
        <div class="content">
            <span>
                © @DateTime.Now.Year by John Qin
            </span>
        </div>
    </div>
    @RenderSection("Scripts", required: false)
</body>
</html>
